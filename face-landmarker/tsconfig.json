{
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
